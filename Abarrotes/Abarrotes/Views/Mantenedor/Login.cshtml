@model AbarrotesModels

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <nav class="navbar navbar-light bg-light">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="#">
                                Iniciar Sesión
                            </a>
                        </div>
                    </nav>
                    <img src="~/Images/logo.jpg" alt="Logo" class="img-fluid rounded-circle">
                    <form asp-action="Login" asp-controller="Mantenedor" method="post" onsubmit="mostrarAlerta()">
                        <div class="mb-2">
                            <label asp-for="Usuario" class="form-label">Usuario</label>
                            <input asp-for="Usuario" type="text" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-dark">Iniciar sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 
@if (TempData["Mensaje"] != null)
{
    <script>
        function mostrarAlerta() {
            Swal.fire({
                icon: 'error',
                title: 'Erroriii',
                text: '@TempData["Mensaje"]',
                confirmButtonText: 'OK',
                timer: 5000, // Duración en milisegundos (en este ejemplo, 5 segundos)
                timerProgressBar: true, // Muestra una barra de progreso durante el tiempo de duración
                allowOutsideClick: false, // Evita que el usuario cierre la alerta haciendo clic fuera de ella
                allowEscapeKey: false // Evita que el usuario cierre la alerta presionando la tecla Esc
            });
        }
    </script>
}