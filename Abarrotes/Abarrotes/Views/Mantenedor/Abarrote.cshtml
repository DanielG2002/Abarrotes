<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .my-container {
            margin-top: 50px;
            background-color: #f5f5f5;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
        }

        .small-input {
            font-size: 0.8rem;
            width: 70%;
        }

        .small-table {
            font-size: 0.9rem;
        }
    </style>
    <title>Contenedor Centrado con Estilos</title>
</head>
<body>
    <div class="container my-container">
        <div class="row">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label for="imagen">Imagen:</label>
                        <input type="file" class="form-control small-input" id="imagen" name="imagen">
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre del Producto:</label>
                        <input type="text" class="form-control small-input" id="nombre" name="nombre">
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripción:</label>
                        <textarea class="form-control small-input" id="descripcion" name="descripcion"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="marca">Marca:</label>
                        <select class="form-control small-input" id="marca" name="marca">
                            <!-- Agrega las opciones del select según tus necesidades -->
                            <option value="marca1">Marca 1</option>
                            <option value="marca2">Marca 2</option>
                            <option value="marca3">Marca 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="precio">Precio:</label>
                        <input type="number" class="form-control small-input" id="precio" name="precio">
                    </div>
                    <button type="submit" class="btn btn-primary">Registrar Producto</button>
                </form>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table table-dark small-table">
                        <thead>
                            <tr>
                                <th>VENDER</th>
                                <th>PRODUCTO</th>
                                <th>DESCRIPCION</th>
                                <th>MARCA</th>
                                <th>PRECIO</th>
                                <th>IMAGEN</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                            Vender
                                        </button>
                                    </td>
                                    <td>@item.Producto</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Marca</td>
                                    <td>@item.Precio</td>
                                    <td>
                                        <img src="@item.Imagen" alt="Imagen" class="img-fluid" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>