  <!DOCTYPE html>
                    <html lang="es">
                    <head>
                        <meta charset="UTF-8">
                        <meta name="viewport" content="width=device-width, initial-scale=1.0">
                        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
                        <style>
                            .my-container {
                                background-color: #f5f5f5;
                                border-radius: 5px;
                                box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
        }

      
        body {
            background-color: black;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

    

                            img {
                                width: 100px;
                                height: 100px;
                            } 
        .modal-content {
            background-color: #f8f9fa;
            border: none;
            border-radius: 10px;
        }

        .modal-header {
            background-color: #343a40;
            color: #fff;
            border-bottom: none;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            background-color: #f8f9fa;
            border-top: none;
        } 
        #productData {
            margin-bottom: 20px;
        }

            #productData h6 {
                font-weight: bold;
                margin-bottom: 5px;
            }

            #productData p {
                margin-bottom: 10px;
            }

        #productImage {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
                        </style>
                        <title>Contenedor Centrado con Estilos</title>
                    </head>
                    <body>
                        <div class="container my-container">
                            <div class="row">
            <div>
                <br />
                <a href="@Url.Action("Guardar", "Mantenedor")" class="btn btn-success" role="button">Agregar Producto</a> <div class="table-responsive">
                    <br />
                    <div class="table-responsive">
                        <table class="table table-hover table-dark small-table">
                                            <thead>
                                                <tr>
                                                    <th>VENDER</th>
                                                    <th>PRODUCTO</th>
                                                    <th>DESCRIPCION</th>
                                                    <th>MARCA</th>
                                                    <th>PRECIO</th>
                                                    <th>IMAGEN</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <!-- Button trigger modal -->
                                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="setProductData('@item.ID', '@item.Producto', '@item.Descripcion', '@item.Marca', '@item.Precio', '@Url.Content(item.Imagen)')">
                                                                Vender
                                                            </button>
                                                        </td>
                                                       
                                                        <td>@item.Producto</td>
                                                        <td>@item.Descripcion</td>
                                                        <td>@item.Marca</td>
                                                        <td>@item.Precio</td>
                                                        <td>
                                                            <img src="@Url.Content(item.Imagen)" alt="Imagen del producto" />
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Confirmar Venta</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                        <p>¿Quieres realizar la venta de este producto?</p>
                                        <div id="productData">
                                            <h6>Producto:</h6>
                                            <p id="productName"></p>
                                            <h6>Descripción:</h6>
                                            <p id="productDescription"></p>
                                            <h6>Marca:</h6>
                                            <p id="productBrand"></p>
                                            <h6>Precio:</h6>
                                            <p id="productPrice"></p>
                                            <h6>Imagen:</h6>
                                            <img id="productImage" src="" alt="Imagen del producto" />
                                        </div>
                                        
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="button" class="btn btn-primary">Confirmar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                        <script>
                            function setProductData(id, productName, productDescription, productBrand, productPrice, productImage) {
                                document.getElementById("productName").textContent = productName;
                                document.getElementById("productDescription").textContent = productDescription;
                                document.getElementById("productBrand").textContent = productBrand;
                                document.getElementById("productPrice").textContent = productPrice;
                                document.getElementById("productImage").src = productImage;
                            }
                        </script>
                    </body>
                </html>
